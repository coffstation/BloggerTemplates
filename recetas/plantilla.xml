<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html expr:dir='data:blog.languageDirection' xmlns='http://www.w3.org/1999/xhtml' xmlns:b='http://www.google.com/2005/gml/b' xmlns:data='http://www.google.com/2005/gml/data' xmlns:expr='http://www.google.com/2005/gml/expr'>

	<head>
		<meta content='width=device-width, initial-scale=1.0' name='viewport'/>
		<meta expr:content='data:blog.title' itemprop='name'/>
		<b:if cond='data:blog.metaDescription'>
			<meta expr:content='data:blog.metaDescription' itemprop='description'/>
		</b:if>		
		<title><data:blog.pageTitle/></title>
		<b:skin><![CDATA[
		]]></b:skin>

		<!-- Latest compiled and minified CSS -->
		<link href='http://cdn.smurfdad.es/assets/bootstrap/3.3.1/css/bootstrap.min.css' rel='stylesheet' type='text/css'/>
		<b:include data='blog' name='google-analytics'/>
	</head>
	<body>
		<b:section id='cabecera'>
			<b:widget id='PageList1' locked='false' title='Pages' type='PageList'>
				<b:includable id='main'>
					<div class='navbar navbar-inverse navbar-fixed-top' role='navigation'>
						<div class='container'>
							<div class='navbar-header'>
								<button class='navbar-toggle' data-target='.navbar-collapse' data-toggle='collapse' type='button'>
									<span class='sr-only'/>
									<span class='icon-bar'/>
									<span class='icon-bar'/>
									<span class='icon-bar'/>
								</button>
								<a class='navbar-brand' href='/'>
									<data:blog.title/>
								</a>
							</div>
							<div class='collapse navbar-collapse'>
								<ul class='nav navbar-nav'>
									<b:loop values='data:links' var='link'>
										<b:if cond='data:link.isCurrentPage'>
											<li class='active'>
												<a href='data:link.href'>
													<data:link.title/>
												</a>
											</li>
											<b:else/>
											<li>
												<a expr:href='data:link.href'>
													<data:link.title/>
												</a>
											</li>
										</b:if>
									</b:loop>
								</ul>
							</div><!--/.nav-collapse -->
						</div>
					</div>
				</b:includable>
			</b:widget>
			<b:widget id='Header1' locked='false' title='Recetas (cabecera)' type='Header'>
				<b:includable id='main'>
					<div class='page-header'>
						<div class='container'>
							<h1>
								<b:include name='title'/>
							</h1>
							<p>
								<b:include name='description'/>
							</p>
						</div>
					</div>
				</b:includable>
				<b:includable id='description'>
					<data:description/>
				</b:includable>
				<b:includable id='title'>
					<data:title/>
				</b:includable>
			</b:widget>
		</b:section>
		<div class='container'>
			<div class='row'>
				<b:section class='col-md-9' id='principal'>
					<b:widget id='Blog1' locked='false' title='Entradas del blog' type='Blog'>
						<b:includable id='main' var='top'>
							<b:if cond='data:blog.pageType == &quot;error_page&quot;'>
								<b:include name='status-message'/>
								<b:else/>
								<b:loop values='data:posts' var='post'>
									<b:include data='post' name='post'/>
								</b:loop>
								<b:include name='nextprev'/>
							</b:if>
						</b:includable>
						<b:includable id='backlinkDeleteIcon' var='backlink'/>
						<b:includable id='backlinks' var='post'/>
						<b:includable id='comment-form' var='post'>
							<a name='comment-form'/>

							<b:if cond='data:blogCommentMessage'>
								<span class='help-block'>
									<data:blogCommentMessage/>
								</span>
							</b:if>
							<b:if cond='data:blogTeamBlogMessage'>
								<span class='help-block'>
									<data:blogTeamBlogMessage/>
								</span>
							</b:if>
							<a expr:href='data:post.commentFormIframeSrc' id='comment-editor-src'/>
							<iframe allowtransparency='true' class='blogger-iframe-colorize blogger-comment-from-post' frameborder='0' height='410' id='comment-editor' name='comment-editor' src='' width='100%'/>
							<data:post.friendConnectJs/>
							<data:post.cmtfpIframe/>
							<script type='text/javascript'>
								BLOG_CMT_createIframe(&#39;<data:post.appRpcRelayPath/>&#39;,
								&#39;<data:post.communityId/>&#39;);
							</script>
						</b:includable>
						<b:includable id='commentDeleteIcon' var='comment'>
							<a class='comment-delete pull-right' expr:href='data:comment.deleteUrl' expr:title='data:top.deleteCommentMsg'>
								<span class='glyphicon glyphicon-trash'/>
							</a>
						</b:includable>
						<b:includable id='comment_count_picker' var='post'/>
						<b:includable id='comment_picker' var='post'/>
						<b:includable id='comments' var='post'>
							<b:if cond='data:post.allowComments'>
								<!-- Si el elemento acepta comentarios dibujamos el pie -->
								<div class='panel-footer'>
									<!-- Si se pueden mostrar los comentarios los mostramos -->
									<b:if cond='data:post.comments'>
										<b:loop values='data:post.comments' var='comment'>
											<b:if cond='data:comment.isDeleted'>
												<b:else/>
											</b:if>
											<div class='panel panel-info'>
												<div class='panel-heading'>
													<data:comment.timestamp/>
													<!-- b:include data='comment' name='commentDeleteIcon'/ -->
												</div>
												<div class='panel-body row'>
													<div class='thumbnail col-md-2 text-center'>
														<b:if cond='data:blog.enabledCommentProfileImages'>
															<data:comment.authorAvatarImage/>
														</b:if>
														<div class='caption'>
															<b:if cond='data:comment.authorUrl'>
																<a expr:href='data:comment.authorUrl' rel='nofollow'>
																	<data:comment.author/>
																</a>
																<b:else/>
																<data:comment.author/>
															</b:if>
														</div>
													</div>
													<div class='col-md-10'>
														<data:comment.body/>
													</div>
												</div>
											</div>
										</b:loop>
									</b:if>
									<b:if cond='data:blog.pageType != &quot;index&quot;'>
										<b:if cond='data:blog.pageType != &quot;archive&quot;'>
											<b:include data='post' name='comment-form'/>
											<b:else/>
											<!-- Mostramos el numero de comentarios del elemento -->
											<a expr:href='data:post.addCommentUrl' title='Incluye tu comentario'>
												<span class='badge'>
													<data:post.numComments/>
												</span>
												<data:top.commentLabel/>
											</a>

										</b:if>
										<b:else/>
										<!-- Mostramos el numero de comentarios del elemento -->
										<a expr:href='data:post.addCommentUrl' title='Incluye tu comentario'>
											<span class='badge'>
												<data:post.numComments/>
											</span>
											<data:top.commentLabel/>
										</a>
									</b:if>
								</div>
							</b:if>
						</b:includable>
						<b:includable id='feedLinks'/>
						<b:includable id='feedLinksBody' var='links'/>
						<b:includable id='iframe_comments' var='post'/>
						<b:includable id='mobile-index-post' var='post'/>
						<b:includable id='mobile-main' var='top'/>
						<b:includable id='mobile-nextprev'/>
						<b:includable id='mobile-post' var='post'/>
						<b:includable id='nextprev'>
							<ul class='pager'>
								<b:if cond='data:blog.pageUrl != data:newerPageUrl'>
									<li>
										<a expr:href='data:newerPageUrl'>
											<data:newerPageTitle/>
										</a>
									</li>
								</b:if>
								<b:if cond='data:blog.pageUrl != data:olderPageUrl'>
									<li>
										<a expr:href='data:olderPageUrl'>
											<data:olderPageTitle/>
										</a>
									</li>
								</b:if>
							</ul>
						</b:includable>
						<b:includable id='post' var='post'>
							<div class='panel panel-default'>
								<div class='panel-heading'>
									<h2 class='panel-title'>
										<a expr:href='data:post.url'>
											<data:post.title/>
										</a>
									</h2>
									<small>
										<data:post.dateHeader/>
									</small>
									<b:if cond='data:post.labels'>
										<br/>
										<b:loop values='data:post.labels' var='label'>
											<a class='btn btn-default btn-xs' expr:href='data:label.url' rel='tag'>
												<data:label.name/>
											</a>
										</b:loop>

									</b:if>
								</div>
								<div class='panel-body'>
									<b:if cond='data:blog.pageType == &quot;index&quot;'>
										<!-- Visualizacion de lista de posts o busquedas el primer post, 
											se muestra completo -->
										<data:post.snippet/>
										<a expr:href='data:post.url'>
											<data:post.jumpText/>
										</a>
										<b:else/>
										<b:if cond='data:blog.pageType == &quot;archive&quot;'>
											<!-- Si es una busqueda de archivo sacamos el resumen -->
											<data:post.snippet/>
											<a expr:href='data:post.url'>
												<data:post.jumpText/>
											</a>
											<b:else/>
											<!-- el resto de casos muestra el cuerpo completo -->
											<data:post.body/>
										</b:if>
									</b:if>
								</div>
								<b:include data='post' name='comments'/>
							</div>
						</b:includable>
						<b:includable id='postQuickEdit' var='post'/>
						<b:includable id='shareButtons' var='post'/>
						<b:includable id='status-message'>
							<b:if cond='data:navMessage'>
								<div class='alert alert-danger'>
									<data:navMessage/>
								</div>
							</b:if>
						</b:includable>
						<b:includable id='threaded-comment-form' var='post'/>
						<b:includable id='threaded_comment_js' var='post'/>
						<b:includable id='threaded_comments' var='post'/>
					</b:widget>
				</b:section>
				<b:section class='col-md-3' id='lateral'>
					<b:widget id='Label1' locked='false' title='Categorias' type='Label'>
						<b:includable id='main'>
							<div class='panel panel-default'>
								<b:if cond='data:title'>
									<div class='panel-heading'>
										<h3 class='panel-title'>
											<data:title/>
										</h3>
									</div>

								</b:if>
								<div class='list-group'>
									<b:loop values='data:labels' var='label'>
										<b:if cond='data:blog.url == data:label.url'>
											<a class='list-group-item active' expr:dir='data:blog.languageDirection' expr:href='data:label.url'>
												<data:label.name/>
												<span class='badge pull-right' dir='ltr'>
													<data:label.count/>
												</span>
											</a>
											<b:else/>
											<a class='list-group-item' expr:dir='data:blog.languageDirection' expr:href='data:label.url'>
												<data:label.name/>
												<span class='badge pull-right' dir='ltr'>
													<data:label.count/>
												</span>
											</a>
										</b:if>

									</b:loop>
								</div>
							</div>
						</b:includable>
					</b:widget>
					<b:widget id='BlogArchive1' locked='false' title='Histórico de publicaciones' type='BlogArchive'>
						<b:includable id='main'>
							<div class='panel panel-default'>
								<b:if cond='data:title'>
									<div class='panel-heading'>
										<h3 class='panel-title'>
											<data:title/>
										</h3>
									</div>
								</b:if>
								<div class='list-group'>
									<b:include data='data' name='flat'/>
								</div>


							</div>
						</b:includable>
						<b:includable id='flat' var='data'>

							<b:loop values='data:data' var='i'>

								<a class='list-group-item' expr:href='data:i.url'>
									<data:i.name/>
									<span class='badge pull-right' dir='ltr'>
										<data:i.post-count/>
									</span>
								</a>

							</b:loop>

						</b:includable>
						<b:includable id='interval' var='intervalData'>
							<span class='list-group-item'>Vista no disponible</span>
						</b:includable>
						<b:includable id='menu' var='data'>
							<span class='list-group-item'>Vista no disponible</span>
						</b:includable>
						<b:includable id='posts' var='posts'>
							<span class='list-group-item'>Vista no disponible</span>
						</b:includable>
						<b:includable id='toggle' var='interval'>
							<span class='list-group-item'>Vista no disponible</span>
						</b:includable>
					</b:widget>
					<b:widget id='PopularPosts1' locked='false' title='Recetas más populares' type='PopularPosts'>
						<b:includable id='main'>
							<div class='panel panel-default'>
								<b:if cond='data:title'>
									<div class='panel-heading'>
										<h3 class='panel-title'>
											<data:title/>
										</h3>
									</div>

								</b:if>
								<div class='list-group'>
									<b:loop values='data:posts' var='post'>
										<b:if cond='data:blog.url == data:post.url'>
											<a class='list-group-item active' expr:dir='data:blog.languageDirection' expr:href='data:post.url'>
												<data:post.title/>
											</a>
											<b:else/>
											<a class='list-group-item' expr:dir='data:blog.languageDirection' expr:href='data:post.url'>
												<data:post.title/>
											</a>
										</b:if>

									</b:loop>
								</div>
							</div>

						</b:includable>
					</b:widget>
				</b:section>
			</div>
			<b:section class='well well-sm text-center' id='pie'>
				<b:widget id='HTML1' locked='false' title='Pie de pagina' type='HTML'>
					<b:includable id='main'>
						<small>
							<data:content/>
						</small>
					</b:includable>
				</b:widget>
			</b:section>
		</div>
		<!-- Latest compiled and minified JavaScript -->
		<script src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js' type='text/javascript'/>
		<script src='http://cdn.smurfdad.es/assets/bootstrap/3.3.1/js/bootstrap.min.js' type='text/javascript'/>
	</body>
</html>